# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/mylittleprice?schema=public"

# Redis Configuration
REDIS_URL="localhost:6379"
REDIS_PASSWORD=""
REDIS_DB=0

# API Keys (comma-separated for rotation)
GEMINI_API_KEYS="your-gemini-key-1,your-gemini-key-2"
SERP_API_KEYS="your-serp-key-1,your-serp-key-2"

# JWT Configuration
JWT_ACCESS_SECRET="your-access-secret-key"
JWT_REFRESH_SECRET="your-refresh-secret-key"
JWT_ACCESS_TTL=900  # 15 minutes
JWT_REFRESH_TTL=2592000  # 30 days

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_REDIRECT_URI="http://localhost:3000/auth/callback"

# Session Configuration
SESSION_TTL=86400  # 24 hours
MAX_MESSAGES_PER_SESSION=8

# Cache TTL (in seconds)
CACHE_SERP_TTL=86400  # 24 hours
CACHE_GEMINI_TTL=3600  # 1 hour

# Server Configuration
PORT=8080
NODE_ENV=development
